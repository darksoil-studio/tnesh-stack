{
  "name": "@darksoil-studio/{{kebab_case app_name}}",
  "version": "0.1.0",
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "pnpm lint && tsc && pnpm localize:build && pnpm analyze",
    "lint": "eslint src && prettier \"src/**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint src --fix && prettier \"src/**/*.ts\" --write --ignore-path .gitignore",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "analyze": "cem analyze --litelement --exclude dist"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist", "locales", "src"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksoil-studio/{{kebab_case app_name}}.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./locales/*": "./locales/*"
  },
  "dependencies": {
    "@holochain/client": "^0.19.0-rc",
    "@darksoil-studio/profiles": "*-rev.*",
    "@tnesh-stack/elements": "^0.500.0-rc",
    "@tnesh-stack/signals": "^0.500.0-rc",
    "@tnesh-stack/utils": "^0.500.0-rc",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^2.8.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@lit/localize-tools": "^0.6.3",
    "typescript": "^5.4.5",
    "tslib": "^2.6.2",
    "vite": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}
